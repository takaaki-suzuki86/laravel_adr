{
  "includes": [
    "app"
  ],
  "report": {
    "html": "./docs/phpmetrics",
    "violations": "./docs/phpmetrics/violations.xml"
  },
    "searches": {
        "Class too complex": {
            "type": "class",
            "ccn": ">=50",
            "failIfFound": true
